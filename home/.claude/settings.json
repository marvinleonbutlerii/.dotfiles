{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "autoUpdatesChannel": "latest",
  "theme": "dark",
  "preferredNotifChannel": "terminal",
  "verbose": false,
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(~/.dotfiles/**)",
      "Write(~/.config/**)",
      "Write(~/.claude/**)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(winget:list)",
      "Bash(winget:search)",
      "Bash(code:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(diff:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(fzf:*)",
      "Bash(bat:*)",
      "Bash(eza:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(which:*)",
      "Bash(where:*)",
      "Bash(type:*)",
      "Bash(env:*)",
      "Bash(set:*)",
      "Bash(export:*)",
      "Bash(source:*)",
      "Bash(test:*)"
    ],
    "deny": [
      "Bash(rm:-rf /)",
      "Bash(rm:-rf ~)",
      "Bash(format:*)",
      "Bash(del:/s)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)"
    ]
  },
  "mcpServers": {}
}
